= simple_form_for [@project, @receipt] do |f|
  .row 
    .col-md-4
      = f.association :bill_category, prompt: 'selecione...'
  .row 
    .col-md-12
      = f.input :name
  .row 
    .col-md-12
      = f.input :description
  .row 
    .col-md-2
      = f.input :value, as: :string, input_html: { class: 'coin_mask'}
    .col-md-2
      = f.input :deadline, as: 'string', input_html: { class: 'date',value: (@receipt.deadline.present?) ? localize(@receipt.deadline) : nil }
    .col-md-2
      = f.input :archive, as: 'file'
    .col-md-2
      = f.input :date_payment, as: 'string', input_html: { class: 'date',value: (@receipt.date_payment.present?) ? localize(@receipt.date_payment) : nil }
  .row 
    .col-md-12
      = f.input :observation_receipt
  .row 
    .col-md-12
      = f.input :status
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'