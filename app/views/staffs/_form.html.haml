= simple_form_for(@staff) do |f|
  = f.error_notification

  .row
    .col-md-8
      = f.input :name
    .col-md-2
      = f.input :code
    .col-md-2
      = f.input :cpf
  .row
    .col-md-2
      = f.association :job, prompt: 'selecione o cargo...'
    .col-md-2
      = f.input :job_function
    .col-md-2
      = f.association :sector, prompt: 'selecione o setor...'
    .col-md-2
      = f.input :telphone
    .col-md-2
      = f.input :telphone_optional
    .col-md-2
      = f.input :celphone
  %hr/
  .row
    .col-md-4
      = f.input :city
    .col-md-2
      = f.input :state
  .row
    .col-md-12
      = f.input :address
  %hr/
  .row
    .col-md-2
      = f.input :born, as: 'string', input_html: { class: 'date', value: (f.object.born.present?) ? localize(f.object.born) : nil }
    .col-md-2
      = f.input :salary, as: :string, input_html: { class: "coin_mask"}
    .col-md-3
      = f.input :status, as: :select, include_blank: false
    .col-md-3
      = f.input :driver, as: :select, include_blank: false
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'
      = link_to "Voltar", staffs_path, class: 'btn btn-default'