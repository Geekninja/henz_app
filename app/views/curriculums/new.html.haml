              .col-md-12
                = f.input :name, :label => 'Nome', :required => true
              .col-md-12
                = f.input :email,:label => 'Seu Email', :required => true
              .col-md-12
                = f.input :message,:label => 'Mensagem', :as => :text, :required => true
