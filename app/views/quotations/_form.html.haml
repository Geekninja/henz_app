= simple_form_for([@project, @quotation]) do |f|
  = f.error_notification

  .row
    .col-md-12
      = f.input :name
  .row
    .col-md-12
      = f.input :description
  .row
    .col-md-2
      = f.input :date, as: 'string', input_html: { class: 'date', value: (f.object.date.present?) ? localize(f.object.date) : nil }
    .col-md-4
      = f.association :responsible, prompt: 'selecione...'
    .col-md-4
      %br/
      = f.input :status
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'
