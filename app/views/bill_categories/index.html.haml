.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        bill_categories
        = link_to 'Nova Bill category', new_bill_category_path, class: 'btn btn-success btn-xs pull-right'
      .panel-body

        %table.table.table-hover.general-table.datatable
          %thead
            %tr
              %th.col-md-2
                Name
              %th.col-md-2
                Status
          %tbody
            %tr
              - @bill_categories.each do |bill_category|

                %td.col-md-8
                  =bill_category.name
                %td.col-md-8
                  =bill_category.status
                %td.col-md-1
                  = link_to 'Editar', edit_bill_category_path(bill_category), class: 'btn btn-info btn-xs'
                  = link_to 'Remover', bill_category, :method => :delete, :data => { :confirm => t(:confirm_remove) }, class: 'btn btn-danger btn-xs'