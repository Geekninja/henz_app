.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        Categorias de conta
        = link_to 'Nova Categoria de Conta', new_bill_category_path, class: 'btn btn-success btn-xs pull-right'
      .panel-body

        %table.table.table-hover.general-table.datatable
          %thead
            %tr
              %th.col-md-2
                Nome
              %th.col-md-2
                Status
              %th.col-md-2
                Ações
          %tbody
            - @bill_categories.each do |bill_category|
              %tr
                %td.col-md-9
                  =bill_category.name
                %td.col-md-1
                  = status_helper bill_category.status
                %td.col-md-2
                  = link_to 'Editar', edit_bill_category_path(bill_category), class: 'btn btn-info btn-xs'
                  = link_to 'Remover', bill_category_path(bill_category), :method => :delete, :data => { :confirm => t(:confirm_remove) }, class: 'btn btn-danger btn-xs'