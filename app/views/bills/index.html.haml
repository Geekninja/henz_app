.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        %b
          Contas
        = link_to '<b>Nova conta</b>'.html_safe, new_project_bill_path, class: 'btn btn-success btn-xs pull-right'
      .panel-body

        %table.table.table-hover.table-striped.general-table.datatable.table-condensed
          %thead
            %tr
              %th
                Tipo
              %th
                Categoria
              %th
                Nome
              %th
                Vencimento
              %th
                Valor
              %th
                Status
              %th
                Ações
          %tbody
            - @bills.each do |bill|
              %tr

                %td.col-md-1
                  = bill_type bill.bill_type
                %td.col-md-2
                  = bill.bill_category.name if bill.bill_category.present?
                %td.col-md-3
                  = bill.name
                %td.col-md-1
                  %span.label.label-info
                    = bill.deadline.strftime('%d/%m/%Y')
                %td.col-md-1
                  %span.label.label-warning
                    = "R$ #{bill.value}"
                %td.col-md-2
                  =bill.status
                %td.col-md-3
                  = link_to '', project_bill_path(project_id: @project, id: bill), class: 'btn btn-success btn-sm fa-share-square-o fa'
                  = link_to '', edit_project_bill_path(project_id: @project, id: bill), class: 'btn btn-info btn-sm fa-edit fa'
                  = link_to '', project_bill_path(project_id: @project, id: bill), :method => :delete, :data => { :confirm => t(:confirm_remove) }, class: 'btn btn-danger btn-sm fa fa-times'